%div.image
  =image_tag ("http://placesheen.com/250/350?unique="+SecureRandom.urlsafe_base64)

%div.description
  %p
    %b Name:
    = @provider.name
  %p
    %b Practitioner:
    = @provider.title 
    = @provider.firstName    
  %p 
    %b Phone:
    = @provider.phone
  %p 
    %b Fax:
    = @provider.fax    
  %p
    %b Address:
    = @provider.address1
  %p 
    %b Suburb:
    = @provider.suburb  
  %p 
    %b State:
    = @provider.state  
  %p 
    %b Postcode:
    = @provider.postCode             
  %hr
  %p
    %b Current Rating
    =image_tag ("4stars.jpg"),{:class => "stars"}



